<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock Text="名前" Width="50" HorizontalAlignment="Left"/>
                <TextBox x:Name="NameTextBox" Width="300" />
            </StackPanel>

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock Text="電話番号" Width="50" HorizontalAlignment="Left"/>
                <TextBox x:Name="PhoneTextBox" Width="300"/>
            </StackPanel>
            
            <Button Content="Save" x:Name="SaveButton" Click="SaveButton_Click"/>
            <Button Content="Read" x:Name="ReadButton" Click="ReadButton_Click"/>



        </StackPanel>
    </Grid>
</Window>
